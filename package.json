{
  "name": "blog-house",
  "description": "A static site generator for personal blogs based on Sapper.",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "dev": "node --inspect node_modules/sapper/dist/cli.js dev",
    "export": "NODE_ENV=production sapper export --concurrent 1 --entry '/ stub'",
    "watch:tailwind": "postcss static/global.css -o static/styles/global-compiled.css -w",
    "build:tailwind": "NODE_ENV=production postcss static/global.css -o static/styles/global-compiled.css",
    "build": "npm-run-all build:tailwind export"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "polka": "next",
    "prismjs": "^1.23.0",
    "sirv": "^1.0.0",
    "transliteration": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@fullhuman/postcss-purgecss": "^4.0.2",
    "@juggle/resize-observer": "^3.3.0",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-replace": "^2.2.0",
    "@rollup/plugin-url": "^5.0.0",
    "@rollup/plugin-yaml": "^3.0.0",
    "carbon-icons-svelte": "^10.27.0",
    "clipboard": "^2.0.8",
    "cssnano": "^4.1.10",
    "date-fns": "^2.17.0",
    "gray-matter": "^4.0.2",
    "html5parser": "^2.0.0",
    "lunr": "^2.3.9",
    "lunr-languages-zh": "^1.4.0",
    "marked": "^2.0.1",
    "nodejieba": "^2.5.1",
    "npm-run-all": "^4.1.5",
    "object-path": "^0.11.5",
    "parse-html-text-content": "^1.1.1",
    "postcss-100vh-fix": "^1.0.2",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "rollup": "^2.41.4",
    "rollup-plugin-glob": "^1.0.2",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sapper": "^0.29.1",
    "svelte": "^3.35.0",
    "tailwindcss": "^2.0.3",
    "tailwindcss-gap": "github:darkyzhou/tailwindcss-gap"
  }
}
